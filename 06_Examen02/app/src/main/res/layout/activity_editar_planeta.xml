<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarPlaneta">

    <EditText
        android:id="@+id/input_editar_masa_planeta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Masa"
        android:inputType="number|numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/input_editar_diametro_planeta"
        app:layout_constraintStart_toStartOf="@+id/input_editar_diametro_planeta"
        app:layout_constraintTop_toBottomOf="@+id/input_editar_diametro_planeta" />

    <Button
        android:id="@+id/btn_editar_cancelar_planeta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="Cancelar"
        app:layout_constraintBottom_toBottomOf="@+id/btn_editar_aceptar_planeta"
        app:layout_constraintEnd_toStartOf="@+id/btn_editar_aceptar_planeta"
        app:layout_constraintTop_toTopOf="@+id/btn_editar_aceptar_planeta" />

    <EditText
        android:id="@+id/input_editar_nombre_planeta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.188" />

    <CheckBox
        android:id="@+id/chb_editar_habitable_planeta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Habitable"
        app:layout_constraintEnd_toEndOf="@+id/input_editar_edad_planeta"
        app:layout_constraintStart_toStartOf="@+id/input_editar_edad_planeta"
        app:layout_constraintTop_toBottomOf="@+id/input_editar_edad_planeta" />

    <EditText
        android:id="@+id/input_editar_edad_planeta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Edad"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/input_editar_masa_planeta"
        app:layout_constraintStart_toStartOf="@+id/input_editar_masa_planeta"
        app:layout_constraintTop_toBottomOf="@+id/input_editar_masa_planeta" />

    <TextView
        android:id="@+id/txt_editar_planeta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_editar_diametro_planeta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Diametro"
        android:inputType="number|numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/input_editar_nombre_planeta"
        app:layout_constraintStart_toStartOf="@+id/input_editar_nombre_planeta"
        app:layout_constraintTop_toBottomOf="@+id/input_editar_nombre_planeta" />

    <Button
        android:id="@+id/btn_editar_aceptar_planeta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:text="Aceptar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>